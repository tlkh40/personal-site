---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class="grid grid-rows-[auto_1fr_auto] min-h-[100svh]">
		<Header />
		<main class="container mx-auto" transition:animate="slide">
			<article class="flex justify-center flex-col">
				<div class="flex flex-col lg:flex-row">
					<div class="max-w-[100vw] sm:max-w-prose prose-invert lg:prose-lg xl:prose-xl p-2 mx-auto">
						<div class="not-prose">
							<div class="flex justify-between">
								<h1 class="text-4xl font-semibold mb-2">{title}</h1>
								<div class="date">
									<FormattedDate date={pubDate} />
									{
										updatedDate && (
											<div class="last-updated-on">
												Last updated on <FormattedDate date={updatedDate} />
											</div>
										)
									}
								</div>
							</div>
							<hr />
						</div>
						<slot transition:animate="initial" />
					</div>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
